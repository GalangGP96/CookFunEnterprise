<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgg">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgFotoUser"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/logo"/>

    <TextView
        android:id="@+id/textNamaUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_alignTop="@+id/imgFotoUser"
        android:layout_toEndOf="@+id/imgFotoUser"
        android:text="Nama user"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textEmailUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textNamaUser"
        android:layout_alignStart="@+id/textNamaUser"
        android:layout_marginTop="15dp"
        android:text="Email"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/imgLogout"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/textEmailUser"
        android:layout_alignStart="@+id/textNamaUser"
        android:src="@android:drawable/ic_lock_power_off" />

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="302dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textDaftarResep"
        android:layout_width="wrap_content"
        android:layout_height="29dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="167dp"
        android:layout_toEndOf="@+id/imgFotoUser"
        android:fontFamily="cursive"
        android:text="Daftar Resep"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        android:textStyle="bold" />

</RelativeLayout>